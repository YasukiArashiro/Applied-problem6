<% @book_comments.each do |comment| %>
	<tr>
		<td><%= comment.comment %></td>

		<% if comment.user_id == current_user.id %>
		    <td><%= link_to 'Delite', book_book_comments_path(comment.book_id,id: comment.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
		<% else %>
			<td></td>
		<% end %>

	</tr>
<% end %>